# GitHub Repository URL
REPO_URL=https://github.com/DEIN_USERNAME/Homelab

# GitHub Personal Access Token
# Erstelle einen auf: https://github.com/settings/tokens
# Benötigte Permissions: repo, workflow
ACCESS_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Runner Name (wie er in GitHub angezeigt wird)
RUNNER_NAME=homelab-runner

# Runner Labels (für runs-on in Workflows)
LABELS=self-hosted,linux,x64,homelab

# Runner Group (meist "Default")
RUNNER_GROUP=Default

# Ephemeral (true = Runner wird nach jedem Job gelöscht und neu erstellt)
EPHEMERAL=false

# Auto-Update deaktivieren (für Stabilität)
DISABLE_AUTO_UPDATE=true
